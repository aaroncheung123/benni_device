<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Games.MathActivity">

    <TextView
        android:id="@+id/problemMathTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="160dp"
        android:layout_marginStart="166dp"
        android:layout_marginTop="132dp"
        android:text="3 + 4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/solutionMathEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        android:ems="10"
        android:hint="Insert Answer Here"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/problemMathTextView" />

    <Button
        android:id="@+id/submitMathButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="submitMathButtonClick"
        android:text="Submit"
        tools:layout_editor_absoluteX="211dp"
        tools:layout_editor_absoluteY="265dp" />
</android.support.constraint.ConstraintLayout>